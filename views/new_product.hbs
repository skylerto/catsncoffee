<div class="row">
  <h1>{{product.title}}</h1>
</div>

<div class="row">
  <form onsubmit="http://localhost:3030/products/new" method="post">
  <fieldset class="form-group">
    <label for="title">Product Title</label>
    <input type="text" name="title" class="form-control" id="title" placeholder="Product Title">
  </fieldset>
  <fieldset class="form-group">
    <label for="price">Product Price</label>
    <input type="text" name="price" class="form-control" id="price" placeholder="$0.00">
  </fieldset>
  </fieldset>
  <fieldset class="form-group">
    <label for="sku">SKU</label>
    <input type="text" name="sku" class="form-control" id="sku"
    placeholder="123">
  </fieldset>
  <fieldset class="form-group">
    <label for="body">About the Product</label>
    <textarea class="form-control" id="body" name="body" rows="3"></textarea>
  </fieldset>
  <button type="submit" class="btn btn-primary">Submit</button>
</form>
</div>
