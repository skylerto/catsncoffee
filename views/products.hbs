<div class="row">
  <h1>{{ pagename }}</h1>
</div>

<div class="row products">
  {{#products}}
    <a href=""> 
      <div class="col-md-3 product">
        <img src={{image.src}}/>
        <h3>{{title}}</h3>
        <div class="price">
          <!-- Only a Single Variant -->
          {{#variants}}
            ${{ price }}
          {{/variants}}
        </div>
      </div>
    </a>
  {{/products}}
</div>
